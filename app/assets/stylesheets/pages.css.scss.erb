body {
  background: #ebedde;
  font-family: 'Quattrocento', serif;
  
  h1 {
    margin-top: 20px;
    margin-bottom: 20px;
  }
  #content {
    position:relative;
  }

  #content img {
    background: white;
    padding: 10px;
    -webkit-box-shadow: 0 3px 6px rgba(0,0,0,.25);
    -moz-box-shadow: 0 3px 6px rgba(0,0,0,.25);
  }
  
  article { margin-left: 20px; margin-right: 20px; }
}

header {
  position: relative;
  margin-bottom: 20px;
  #logo {
    text-decoration: none;
    span {
      vertical-align: middle;
      display: inline-block;
      font-size: 350%;
      line-height: 1em;
      margin: .25em 0;
      color: black;
    }
  }
  #contact-top {
    float:right;
    margin: auto;
    display: inline-block;
    vertical-align: middle;
    text-align: right;
    padding: 0;
    padding-top: 20px;
  }
  nav {
    text-align:right;
    float: right;
//    bottom: 0;
//    right: 0;
    display: inline-block;
//    position: absolute;
  }
}

footer {
  margin-top: 20px;
  margin-bottom: 40px;
  nav { 
    margin-left: auto;
    margin-right: auto;
    width: 52%;
  }
}

body>.container { 
  text-align:left;
  background: white;
  padding: 0 20px 20px;
  margin-top: 40px;
  margin-bottom: 40px;
  margin-left: auto;
  margin-right: auto;
  width: 960px;
}

// home

.slide { display: none; }

#blurbs { margin: 0; }
.blurb {
  width: 297px;
  margin-left: 10px;
  margin-right: 10px;
  vertical-align: top;
  display: inline-block;
}

// projects

#gallery {
  a { 
    display: inline-block;
    text-decoration: none
    }
  img {
      margin: 27px;
//      margin-bottom: -4px;
  }
  .project-photos { display: none; }
  .title, .fancybox-gallery {	display:none; }
}

// history

.sidebar { 
  width: 300px;
  margin-left: 20px;
  margin-right: 20px;
  display: inline-block;
}
.history {
  width: 570px;
  vertical-align: top;
  display: inline-block;
}
.signature { text-align: right; }

// contact


#content .background {
  content : "";
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  height:100%;
  width:100%;
  background-image: url(<%= get_contacts_image %>);
  opacity: 0.2;
}

.contacts {
  position:relative;
  padding: 1em;
  
  div {
    clear: both;
    text-align: center;
  }
  .info {
    width: 250px;
    margin: 1em auto 1em auto;
  	padding: 10px;
  	-webkit-box-shadow: 0 3px 6px rgba(0,0,0,.25);
  	-moz-box-shadow: 0 3px 6px rgba(0,0,0,.25);
    background-color: white;
    opacity: 1;
    
  }
  .addresses {
    display:block;
    width: 100%;
  }
  .address {
    width: 250px;
    margin: 1em 10% 1em 10%;
    display: inline-block;
  	padding: 10px;
  	-webkit-box-shadow: 0 3px 6px rgba(0,0,0,.25);
  	-moz-box-shadow: 0 3px 6px rgba(0,0,0,.25);
    background-color: rgba(255,255,255,1);
    
  }
  .contact {
    width: 250px;
    margin: 1em auto 1em auto;
  	padding: 10px;
  	-webkit-box-shadow: 0 3px 6px rgba(0,0,0,.25);
  	-moz-box-shadow: 0 3px 6px rgba(0,0,0,.25);
    background-color: rgba(255,255,255,1);
    
  }
  p {
    margin-top: .5em;
    margin-bottom: .5em;
  }
}



/*------------------------------------------*/
//      utilitys

.clear {
  clear: both;
  display: block;
  overflow: hidden;
  visibility: hidden;
  width: 0;
  height: 0;
}

